<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#30a3abf1">

        <ImageView
            android:id="@+id/imageView_imagen"
            android:layout_marginBottom="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:contentDescription="DescripciÃ³n del contenido de la imagen"
            android:src="@drawable/usera" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:paddingTop="4dp"
            android:paddingStart="10dp"
            android:paddingBottom="4dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_superior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="El nobre de juanito"
                style="@style/negro" />

            <TextView
                android:id="@+id/textView_medio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="la direccion de juanito"
                style="@style/plomo"/>

            <TextView
                android:id="@+id/textView_inferior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="el tiempo de legada"
                style="@style/casiblanco"/>

        </LinearLayout>
     </LinearLayout>


</LinearLayout>