        android:layout_height="wrap_content"
        android:background="#30a3abf1">

        <ImageView
            android:id="@+id/imageView_imagen"
            android:layout_margin="3dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:contentDescription="Descripci칩n del contenido de la imagen"
            android:src="@drawable/usera" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:paddingTop="4dp"
            android:paddingStart="10dp"
            android:paddingBottom="4dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_superior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="El nombre de alvari침o gey"
                android:textSize="@dimen/text_size"
                style="@style/negro" />

            <TextView
                android:id="@+id/textView_medio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_uno"
                android:text="la direccion de alvari침o gey"
                style="@style/plomo"/>

            <TextView
                android:id="@+id/textView_inferior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_dos"
                android:text="el tiempo de alvari침o gey"
                style="@style/casiblanco"/>

        </LinearLayout>
     </LinearLayout>


</LinearLayout>